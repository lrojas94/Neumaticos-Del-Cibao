<Window x:Class="Neumaticos_del_Cibao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neumaticos_del_Cibao"
        mc:Ignorable="d"
        Title="Neumaticos del Cibao" Height="400" Width="600">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Compradores">
                <Frame Name="shoppingFrame" Background="#FFE5E5E5" Template="{StaticResource BaseFrame}"/>
            </TabItem>
            <TabItem Header="Vendedores">
                <Frame Name="salesFrame" Background="#FFE5E5E5" Template="{StaticResource BaseFrame}"/>
            </TabItem>
            <TabItem Header="Generales">
                <Frame Name="generalFrame" Background="#FFE5E5E5" Template="{StaticResource BaseFrame}"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
