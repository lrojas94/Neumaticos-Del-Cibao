<Window x:Class="Neumaticos_del_Cibao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neumaticos_del_Cibao"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="650">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Compradores">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Vendedores">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Usuarios">
                <Grid Background="#FFE5E5E5" Margin="-4,2,4,-3">
                    <Frame x:Name="UserFrame" Content="To be replaced by UserInforReader" ClipToBounds="True"  Margin="0,-4,-6,0" Background="#95a5a6"/>

                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
