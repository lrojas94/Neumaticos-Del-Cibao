<Page x:Class="Neumaticos_del_Cibao.ViewAllEmployees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neumaticos_del_Cibao"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="650"
      Title="ViewAllEmployees">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#FFECF0F1">
            <TextBox x:Name="name" Height="{Binding ActualHeight,ElementName=filterLabel}" Margin="123,10,73,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <DataGrid x:Name="permissions" Margin="67,59,74,101" MinHeight="100" MinWidth="100"/>

            <Label x:Name="filterLabel" Content="Filtrar:" Margin="67,10,300,0" RenderTransformOrigin="-0.739,0.586" Height="25" VerticalAlignment="Top"/>
        
    </Grid>
    </ScrollViewer>
</Page>
