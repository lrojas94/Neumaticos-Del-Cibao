<Page x:Class="Neumaticos_del_Cibao.CRUD_Permissions.ViewAllPermissions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neumaticos_del_Cibao.CRUD_Permissions"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="ViewAllPermissions" Background="lightgray">

    <ScrollViewer VerticalScrollBarVisibility="auto">
        <Grid>

            <TextBox x:Name="name" Height="{Binding ActualHeight,ElementName=filtarLabel}" Margin="123,10,73,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <DataGrid x:Name="permissions" Margin="67,59,74,101" MinHeight="100" MinWidth="100"/>

            <Label x:Name="filtarLabel" Content="Filtrar:" Margin="67,10,300,0" RenderTransformOrigin="-0.739,0.586" Height="25" VerticalAlignment="Top"/>
            <StackPanel Orientation="Horizontal" Height="20" Margin="67,0,74.333,81" Width="{Binding ActualWidth,ElementName=permissions}" VerticalAlignment="Bottom" >
                <Button Width="50" x:Name="btnAnadir" Content="Anadir"/>
                <Button Width="{Binding ActualWidth, ElementName=btnAnadir}" x:Name="btnModificar" Content="Modificar"/>
                <Button Width="{Binding ActualWidth, ElementName=btnAnadir}" x:Name="btnEliminar" Content="Eliminar"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
    <!--falta poner que los datos se carguen de la base de datos -->
    <!-- y luego de que se conecten la base de datos y la interfaz, 
    que al darle al boton de eliminar, se elimine el permiso seleccionado, 
    tambien habria que actualizar los usuarios y quitarle este permiso.
    por ultimo habria que implementar la funcion de filtrar la cual ayudara a buscar entre todos los
    permisos en caso de que sean demasiados -->
</Page>
