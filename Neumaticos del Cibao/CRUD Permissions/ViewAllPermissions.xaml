<Page x:Class="Neumaticos_del_Cibao.CRUD_Permissions.ViewAllPermissions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neumaticos_del_Cibao.CRUD_Permissions"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="417"
      Title="ViewAllPermissions" Background="lightgray">

    <ScrollViewer VerticalScrollBarVisibility="auto">
        <Grid>

            <TextBox x:Name="textBox" Height="{Binding ActualHeight,ElementName=label}" Margin="122,10,74.333,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <DataGrid x:Name="dataGrid" Margin="67,54,74.333,0" VerticalAlignment="Top" Height="190" MinHeight="100" MinWidth="100"/>

            <Label x:Name="label" Content="Filtrar:" Margin="67,10,300.333,0" RenderTransformOrigin="-0.739,0.586" Height="32" VerticalAlignment="Top"/>
            <Button x:Name="button1" Content="Modificar" HorizontalAlignment="Left" Margin="177,0,0,38" VerticalAlignment="Bottom" Width="76" Height="20" Click="button1_Click"/>
            <Button x:Name="button2" Content="Eliminar" HorizontalAlignment="Right" Margin="0,0,74,38" Width="50" Height="20" VerticalAlignment="Bottom" />
            <Button x:Name="button" Content="Anadir" HorizontalAlignment="Left" Margin="67,0,0,38" VerticalAlignment="Bottom" Width="50" Height="20"/>

        </Grid>
    </ScrollViewer>
    <!--falta poner que los datos se carguen de la base de datos -->
    <!-- y luego de que se conecten la base de datos y la interfaz, 
    que al darle al boton de eliminar, se elimine el permiso seleccionado, 
    tambien habria que actualizar los usuarios y quitarle este permiso.
    por ultimo habria que implementar la funcion de filtrar la cual ayudara a buscar entre todos los
    permisos en caso de que sean demasiados -->
</Page>
